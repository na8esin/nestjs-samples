{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "gt": "ts-node src/generate-typings",
    "build": "rimraf dist && tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:w": "ts-node-dev -r tsconfig-paths/register src/main.ts",
    "start:dev": "nest start --watch",
    "start:debug": "tsc-watch -p tsconfig.build.json --onSuccess \"node --inspect-brk dist/main.js\"",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "pm2:r": "pm2 start ecosystem.config.js --env development -l logs/",
    "pm2:d": "pm2 stop ecosystem.config.js --env development"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/common": "^7.2.0",
    "@nestjs/core": "^7.2.0",
    "@nestjs/graphql": "^7.4.6",
    "@nestjs/jwt": "^7.0.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^7.2.0",
    "@nestjs/typeorm": "^7.1.0",
    "apollo-server-express": "^2.15.0",
    "class-transformer": "0.3.1",
    "class-validator": "0.12.2",
    "dataloader": "^2.0.0",
    "dotenv": "^8.2.0",
    "express-rate-limit": "^5.1.3",
    "express-winston": "^4.0.3",
    "graphql": "^15.1.0",
    "graphql-subscriptions": "1.1.0",
    "graphql-tag-pluck": "^0.8.7",
    "graphql-tools": "^6.0.11",
    "mysql": "^2.18.1",
    "nest-winston": "^1.3.5",
    "nestjs-redis": "^1.2.8",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-oauth2-client-password": "^0.1.2",
    "pm2": "^4.4.0",
    "query-string": "^6.13.1",
    "rate-limit-redis": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.5.5",
    "typeorm": "^0.2.25",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.4.1",
    "@nestjs/testing": "^7.2.0",
    "@types/express": "4.17.6",
    "@types/hapi__joi": "^17.1.3",
    "@types/ioredis": "^4.16.7",
    "@types/jest": "26.0.3",
    "@types/node": "14.0.14",
    "@types/passport-jwt": "^3.0.3",
    "@types/passport-oauth2-client-password": "^0.1.2",
    "@types/supertest": "2.0.9",
    "jest": "26.1.0",
    "prettier": "2.0.5",
    "sqlite3": "^4.2.0",
    "supertest": "4.0.2",
    "ts-jest": "26.1.1",
    "ts-node": "8.10.2",
    "ts-node-dev": "^1.0.0-pre.49",
    "tsc-watch": "4.2.9",
    "tsconfig-paths": "3.9.0",
    "tslint": "6.1.2",
    "typescript": "3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "../jest.setup.js"
    ]
  }
}
